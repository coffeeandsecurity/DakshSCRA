<root>
    <rule>
        <platform>dotnet</platform>
        <path>/dotnet/dotnet.xml</path>
        <ftypes>*.aspx, *.cs, *.vb, *.asax, *.asp, *.sln, *.svc, *.cshtml, *.rdl, *.sql, *.edmx, *.config</ftypes>
    </rule>
    <rule>
        <platform>php</platform>
        <path>/php/php.xml</path>
        <ftypes>*.php, *.ini, *.txt, *.config, *.xml, *.lock, .htaccess, *.log</ftypes>
    </rule>
    <rule>
        <platform>java</platform>
        <path>/java/java.xml</path>
        <ftypes>*.java, *.jsp</ftypes>
    </rule>
    <rule>
        <platform>javascript</platform>
        <path>/javascript/javascript.xml</path>
        <ftypes>*.js, *.ts</ftypes>
    </rule>
    <rule>
        <platform>kotlin</platform>
        <path>/mobile/android/kotlin.xml</path>
        <ftypes>*.kt, *.java, *.xml</ftypes>
    </rule>
    <rule>
        <platform>python</platform>
        <path>/python/python.xml</path>
        <ftypes>*.py, *.yml, *.yaml, *.config, *.xml</ftypes>
    </rule>
    <rule>
        <platform>go</platform>
        <path>/golang/go.xml</path>
        <ftypes>*.go, *.mod, *.sum</ftypes>
    </rule>
    <rule>
        <platform>android</platform>
        <path>/mobile/android/android.xml</path>
        <ftypes>*.java, *.kt, *.groovy, *.xml</ftypes>
    </rule>
    <rule>
        <platform>common</platform>
        <path>/common.xml</path>
        <ftypes>*.aspx, *.cs, *.vb, *.asax, *.asp, *.php, *.java, *.jsp, *.js, *.ts, *.py, *.yml, *.yaml, *.config, *.xml, *.sql, *.ini, *.txt, *.conf, *.properties, *.json</ftypes>
    </rule>
    <!-- # Enable this rule when you want to create a custom rules file and also scan for custom file types list
    <rule>
        <platform>custom</platform>
        <path>/custom/custom.xml</path>
        <ftypes>*.java, *.jsp, *.js, *.php</ftypes>
    </rule>-->
    <rule>
        <platform>allfiles</platform>
        <path>/common.xml</path>
        <ftypes>*.*</ftypes>
    </rule>
</root>


