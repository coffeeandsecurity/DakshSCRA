<root>
    <rule>
        <platform>dotnet</platform>
        <path>/dotnet/dotnet.xml</path>
        <ftypes>*.aspx*, *.cs, *.vb, *.asax*, *.asp, *.sln, *.svc, *.cshtml, *.rdl, *.sql, *.edmx, *.config</ftypes>
    </rule>
    <rule>
        <platform>php</platform>
        <path>/php/php.xml</path>
        <ftypes>*.php, *.ini, *.txt, *.config, *.xml, *.lock, .htaccess</ftypes>
    </rule>
    <rule>
        <platform>java</platform>
        <path>/java/java.xml</path>
        <ftypes>*.java, *.jsp</ftypes>
    </rule>
    <rule>
        <platform>python</platform>
        <path>/python/python.xml</path>
        <ftypes>*.py, *.conf, *.ini, *.txt, *.config, *.xml</ftypes>
    </rule>
    <rule>
        <platform>ruby</platform>
        <path>/ruby/ruby.xml</path>
        <ftypes>*.rb</ftypes>
    </rule>
    <rule>
        <platform>javascript</platform>
        <path>/javascript/javascript.xml</path>
        <ftypes>*.js, *.ts, *.vue</ftypes>
    </rule>
    <rule>
        <platform>golang</platform>
        <path>/golang/golang.xml</path>
        <ftypes>*.go, *.mod, *.sum</ftypes>
    </rule>
    <rule>
        <platform>rust</platform>
        <path>/rust/rust.xml</path>
        <ftypes>*.rs, *.toml</ftypes>
    </rule>
    <rule>
        <platform>carbon</platform>
        <path>/carbon/carbon.xml</path>
        <ftypes>*.carbon</ftypes>
    </rule>
    <rule>
        <platform>database</platform>
        <path>/database/database.xml</path>
        <ftypes>*.sql, *.psql, *.db</ftypes>
            <dbtype>
                <platform>storedprocedure</platform>
                <path>/database/sql/sql_sp.xml</path>
            </dbtype>
            <dbtype>
                <platform>postgress</platform>
                <path>/database/postgress.xml</path>
                <ftypes>*.psql, *.dbf, *.sqr, *.sql, *.gdb, *.rbf, *.db, *.spf, *.lis, *.mkd, *.sqs</ftypes>
            </dbtype>
    </rule>
    <rule>
        <platform>common</platform>
        <path>/common.xml</path>
        <ftypes>*.sql, *.ini, *.txt, *.conf, *.config, *.yml, *.yaml, *.properties, *.xml, *.json</ftypes>
    </rule>
    <rule>
        <platform>custom</platform>
        <path>/custom/custom.xml</path>
        <ftypes>*.java, *.jsp, *.js, *.php, *.sql, *.html, *.conf, *.ini, *.txt, *.config, *.cache, *.xsdconfig, *.xml, *.ppk, *.pub, *.key, *.properties, *.lock, *.json</ftypes>
    </rule>
    <rule>
        <platform>allfiles</platform>
        <path>/common.xml</path>
        <ftypes>*.*</ftypes>
    </rule>
</root>